<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="crm_lead_tag_form" model="ir.ui.view">
        <field name="name">crm.tag.form</field>
        <field name="model">crm.tag</field>
        <field name="inherit_id" ref="sales_team.sales_team_crm_tag_view_form" />
        <field name="arch" type="xml">
            <field name="color" position="before">
                <field name="send_double_opt_in"/>
            </field>
        </field>
    </record>

    <record id="crm_lead_tag_tree" model="ir.ui.view">
        <field name="name">crm.tag.tree</field>
        <field name="model">crm.tag</field>
        <field name="inherit_id" ref="sales_team.sales_team_crm_tag_view_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="send_double_opt_in"/>
            </field>
        </field>
    </record>

</odoo>
