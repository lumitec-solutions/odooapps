<odoo>
    <data>
        <!-- Course Failure Page -->
    <record id="slide_redirect_fail" model="website.page">
            <field name="name">Fail (Course)</field>
            <field name="type">qweb</field>
            <field name="url">/slide-redirect-fail</field>
            <field name="website_indexed" eval="False"/>
            <field name="is_published">True</field>
            <field name="key">slide_redirect_fail</field>
            <field name="arch" type="xml">
                <t name="Fail (Course)" t-name="slide_redirect_fail">
                    <t t-call="website.layout">
                      <div id="wrap">
                        <div class="oe_structure" id="oe_structure_slide_redirect_fail_1"/>
                        <div class="container pt-3">
                            <h1>Failed!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Only Attendees can view the course
                                        <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="oe_structure" id="oe_structure_slide_redirect_fail_2"/>
                      </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>