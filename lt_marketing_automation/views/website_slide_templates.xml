<?xml version="1.0" ?>
<odoo>

    <template id="course_card" inherit_id="website_slides.course_card">
        <xpath expr="//div/a" position="replace">
            <a t-attf-href="/slides/#{slug(channel)}/#{partner_token}" t-title="channel.name">
                <div t-if="channel.image_1024" class="card-img-top" t-attf-style="padding-top: 50%; background-image: url(#{course_image}); background-size: cover; background-position:center"/>
                <div t-else="" class="o_wslides_gradient card-img-top position-relative" style="padding-top: 50%; opacity: 0.8">
                    <i class="fa fa-graduation-cap fa-2x mr-3 mb-3 position-absolute text-white-75" style="right:0; bottom: 0"/>
                </div>
            </a>
        </xpath>
        <xpath expr="//div[hasclass('card-body')]/a" position="replace">
            <a class="card-title h5 mb-2 o_wslides_desc_truncate_2" t-attf-href="/slides/#{slug(channel)}/#{partner_token}" t-esc="channel.name"/>
        </xpath>
    </template>
    <template id="course_nav" inherit_id="website_slides.course_nav">
        <xpath expr="//ol[hasclass('breadcrumb')]/li[2]" position="replace">
            <li t-att-class="'breadcrumb-item %s' % ('active' if not search_category and not search_tag and not search_slide_type and not slide else '')">
                <a t-att-href="'/slides/%s/%s' % (slug(channel),partner_token)"><span t-esc="channel.name"/></a>
            </li>
        </xpath>
        <xpath expr="//div[hasclass('dropdown-menu')][1]/a[2]" position="replace">
            <a t-att-class="'dropdown-item %s' % ('active' if not search_category and not search_tag and not search_slide_type else '')" t-att-href="'/slides/%s/%s' % (slug(channel),partner_token)">
                &#9492;<span class="ml-1" t-esc="channel.name"/>
            </a>
        </xpath>
    </template>
    <template id="course_slides_cards" inherit_id="website_slides.course_slides_cards">
        <xpath expr="//div[hasclass('form-inline')][1]/a" position="attributes">
            <attribute name="t-att-href">'/slides/%s/%s' % (slug(channel),partner_token)</attribute>
        </xpath>
    </template>
</odoo>
